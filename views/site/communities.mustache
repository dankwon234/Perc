<!doctype html>
<html lang="en" ng-app="Perc" ng-controller="BaseController" ng-init="checkCurrentUser()">
    <head>
        {{>head}}
    </head>

    <body ng-controller="CommunitiesController" ng-init="init()">
        {{>modals}}
        {{>nav}}

        <div class="main-container">
            <section class="page-title page-title-3 image-bg overlay">
                <div class="background-image-holder">
                    <img alt="Background Image" class="background-image" src="/site/img/cover15.jpg" />
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <h3 class="uppercase mb0">Communities</h3>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
            </section>



            <section class="bg-secondary">
                <div class="container">
                    <div class="row masonry-loader">
                        <div class="col-sm-12 text-center">
                            <div class="spinner"></div>
                        </div>
                    </div>
                    <div class="row masonry masonryFlyIn mb40">

                        <div ng-repeat="community in communities track by $index" class="col-sm-4 post-snippet masonry-item">
                            <div style="width:90%;margin:auto;background:url('https://media-service.appspot.com/site/images/<% community.image %>?crop=320');height:120px">
                                <div style="height:120px;background:rgba(0,0,0,0.6);padding:24px">
                                    <img align="left" style="width:120px;margin-right:12px;" src="https://media-service.appspot.com/site/images/<% community.image %>?crop=260" />
                                    <h4 style="color:#fff;"><% community.name %></h4>
                                </div>
                            </div>

                            <div class="inner">
                                <br />
                                <a href="#"><span style="background:#eee;padding:4px;border:1px solid #ddd;margin-right:6px" class="mb10">Website</span></a>
                                <a href="#"><span style="background:#eee;padding:4px;border:1px solid #ddd" class="mb10"><% community.city.toUpperCase() %></span></a>

                                <br /><br /><hr>
                                <p><% community.description %></p>
                                <a ng-show="profile.communities.indexOf(community.id) == -1" class="btn btn-sm" ng-click="joinCommunity(community)" href="">Join</a>

                                <a ng-show="profile.communities.indexOf(community.id) != -1" class="btn btn-sm" href="#">View</a>
                            </div>
                        </div>
                        <!--end of snippet-->



                    </div>
                    <!--end of row-->


                </div>
                <!--end of container-->
            </section>

            {{>footer}}

        </div>
        {{>scripts}}

    </body>
</html>