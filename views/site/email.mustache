<!doctype html>
<html lang="en" ng-app="Perc" ng-controller="BaseController" ng-init="checkCurrentUser()">
    <head>
	    {{>head}}
		
    </head>
	
    <body ng-controller="EmailController" ng-init="init()">
        {{>modals}}
        {{>nav}}
		
		
        <div class="main-container">
		
		  <section class="page-title page-title-4 image-bg overlay parallax">
                <div class="background-image-holder fadeIn" style="transform: translate3d(0px, 0px, 0px); top: -100px; background: url('/site/img/cover12.jpg');">
                    <img alt="Background Image" class="background-image" src="/site/img/cover12.jpg" style="display: none;">
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="uppercase mb0">Email</h3>
                        </div>
                        <div class="col-md-6 text-right">
                            <ol class="breadcrumb breadcrumb-2">
                                <li><a href="/">Home</a></li>
                                <li><a href="/">Forum</a></li>
                                <li class="active">Post</li>
                            </ol>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>
					
			
            <section style="border-top:1px solid #ddd">
                <div class="container">
                    <div class="row">
                        <div class="col-md-9 mb-xs-24">
                            <textarea ng-model="recipientsString" rows="3" placeholder="Emails"></textarea>
                            <button ng-click="sendEmail()" style="background:#fff;border-radius:22px" class="btn btn-large">Send Email</button>
							<br /><br />
                            <hr>
							
                        </div>
                        <!--end of nine col-->
						
                        <div class="col-md-3 hidden-sm">
							
                            <div class="widget">
                                <h6 class="title">Workshops</h6>
                                <hr>
                                <ul class="link-list recent-posts">
                                    <li>
                                        <a href="/#workshops">MEAN Stack Demo</a>
                                        <span class="date">Sept 12, 2015</span>
                                    </li>
                                    <li>
                                        <a href="/#workshops">iOS Demo</a>
                                        <span class="date">Sept 19, 2015</span>
                                    </li>
                                    <li>
                                        <a href="/#workshops">Node JS Crashcourse</a>
                                        <span class="date">Sept 26-27, 2015</span>
                                    </li>
                                    <li>
                                        <a href="/#workshops">iOS Crashcourse</a>
                                        <span class="date">Sept 26-27, 2015</span>
                                    </li>
                                    <li>
                                        <a href="/#workshops">8-Week Node JS Course</a>
                                        <span class="date">Oct 06, 2015</span>
                                    </li>
                                    <li>
                                        <a href="/#workshops">8-Week iOS Course</a>
                                        <span class="date">Oct 05, 2015</span>
                                    </li>
									
                                </ul>
                            </div>
                            <!--end of widget-->
							
							
                        </div>
                        <!--end of sidebar-->
                    </div>
                    <!--end of container row-->
                </div>
                <!--end of container-->
            </section>
			
			{{>footer}}


        </div>
		
		{{>scripts}}
		
    </body>
</html>